---
import Logo from '@/assets/logo.svg'
import MainNav from "@/components/ui/MainNav.astro";

interface Props {
    bgImg: string;
    subtitle: string;
}

const {bgImg, subtitle} = Astro.props;
---


<header
        class="min-h-72 relative pb-72"
>
    <div class="absolute inset-0 bg-center bg-cover"
         style={{backgroundImage: `url(${bgImg})`}}
    ></div>
    <div class="absolute inset-0 bg-black/60"></div>

    <div class="relative max-w-7xl mx-auto py-3">
        <div class="flex flex-col items-center lg:flex-row lg:justify-between">
            <a href="/">
                <Logo class="w-72"/>
            </a>
            <MainNav/>
        </div>
        <h1 class="text-4xl font-black uppercase text-white text-center mt-10">{subtitle}</h1>
    </div>
</header>